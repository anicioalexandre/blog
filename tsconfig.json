{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "./src",
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["astro/client"]
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
