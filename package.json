{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "wrangler types && pnpm relay && astro dev",
    "build": "wrangler types && pnpm relay && astro build",
    "lint": "tsc --noEmit",
    "clean": "rm -rf .astro .wrangler dist node_modules",
    "preview": "wrangler types && astro preview",
    "astro": "astro",
    "relay": "rm -rf dist && relay-compiler",
