    "@astrojs/tailwind": "^5.1.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@octokit/auth-app": "^8.0.1",
    "astro": "^5.11.0",
    "js-cookie": "^3.0.5",
    "mdast-util-to-string": "^4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-markdown": "^9.0.3",
