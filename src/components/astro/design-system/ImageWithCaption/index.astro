---
import { Image } from 'astro:assets'

interface Props {
  src: ImageMetadata
  alt: string
  caption?: string
}
const { src, alt, caption } = Astro.props
---

<figure class="w-full max-w-4xl justify-self-center">
  <Image
    src={src}
    alt={alt}
    format="webp"
    quality={80}
    widths={[400, 800, 1200, 1600]}
    sizes="(max-width: 400px) 400px, (max-width: 800px) 800px, (max-width: 1200px) 1200px, 1600px"
    class="h-auto w-full rounded-lg object-cover"
    loading="lazy"
  />
  {
    caption && (
      <figcaption class="prose-caption mt-2 text-center text-object-low">{caption}</figcaption>
    )
  }
</figure>
